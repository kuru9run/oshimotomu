<div class="p-4">
  <p class="text-xl text-center font-bold"><%= @favorite.name %>さんファンの<span class="text-secondary">以前の推し</span></p>
  <%= pie_chart @chart_before %>
</div>
<div class="p-4">
  <p class="text-xl text-center font-bold">元<%= @favorite.name %>さんファンの<span class="text-primary">現在の推し</span></p>
  <%= pie_chart @chart_now %>
</div>
