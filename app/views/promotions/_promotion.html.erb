<div class="card w-96 border text-primary-content m-3">
  <div class="card-body">      
    <%= turbo_frame_tag promotion do %>
      <%= render partial: 'shared/promotion_bookmark', locals: { promotion: promotion } %>
    <% end %>
    <%= render partial: 'shared/avatar_name', locals: { user: promotion.user } %>
    <p class="self-end"><%= l(promotion.created_at, format: :long) %></p>
    <h2><%= link_to "#{promotion.name}さんの布教", promotion_path(promotion), class: "card-title underline" %></h2>
    <p class="text-sky-500"><%= "##{promotion.group.name}所属" unless promotion.group.nil? %></p>
    <p class="text-sky-500"><%= "#「#{promotion.content.title}」のキャラクター" unless promotion.content.nil? %></p>
    <p class="text-sky-500"><%= "##{promotion.decade_i18n}" unless promotion.decade.nil? %></p>
    <p class="text-sky-500"><%= "##{promotion.gender_i18n}" unless promotion.gender.nil? %></p>
  </div>
</div>
